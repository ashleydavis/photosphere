  "license": "MIT",
  "devDependencies": {
    "@types/express": "^4.17.16",
    "@types/node": "^22.9.1",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "express": "^5.0.0-beta.1",
    "node-utils": "workspace:*",
    "open": "^10.1.2"
  }
}

