{
  "name": "task-queue",
  "version": "1.0.0",
  "description": "A task queue system using Bun workers for parallel task execution",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "t": "bun run test",
    "tw": "bun run test:watch",
    "test": "jest --passWithNoTests",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "c": "bun run compile",
    "cw": "bun run compile:watch",
    "compile": "tsc",
    "compile:watch": "tsc --watch --preserveWatchOutput",
    "clean": "rm -rf build dist coverage tsconfig.tsbuildinfo"
  },
  "keywords": [],
  "author": "ashley@codecapers.com.au",
  "license": "MIT",
  "dependencies": {
    "node-utils": "workspace:*",
    "serialize-error": "^12.0.0",
    "utils": "workspace:*"
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/node": "^22.9.1",
    "@types/bun": "latest",
    "jest": "^29.0.1",
    "ts-jest": "^29.0.5",
    "typescript": "^5.6.3"
  }
}
