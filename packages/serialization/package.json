{
  "name": "serialization",
  "version": "1.0.0",
  "description": "Binary serialization and deserialization with versioning support.",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "t": "bun run test",
    "tw": "bun run test:watch",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "c": "bun run compile",
    "cw": "bun run compile:watch",
    "compile": "tsc",
    "compile:watch": "tsc --watch --preserveWatchOutput",
    "clean": "rm -rf build dist coverage tsconfig.tsbuildinfo"
  },
  "keywords": ["serialization", "binary", "versioning"],
  "author": "ashley@codecapers.com.au",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/node": "^22.9.1",
    "jest": "^29.0.1",
    "ts-jest": "^29.0.5",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "storage": "workspace:*"
  }
}