{
  "name": "dev-server",
  "version": "1.0.0",
  "devDependencies": {
    "@types/bun": "latest",
    "@types/express": "4.17.21",
    "@types/ws": "^8.5.13",
    "typescript": "^5.6.3"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "description": "Development server with WebSocket support",
  "private": true,
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun run --hot src/index.ts",
    "d": "bun run dev",
    "c": "bun run compile",
    "cw": "bun run compile:watch",
    "compile": "tsc",
    "compile:watch": "tsc --watch --preserveWatchOutput",
    "clean": "rm -rf dist tsconfig.tsbuildinfo"
  },
  "type": "module",
  "dependencies": {
    "express": "4.18.2",
    "rest-api": "workspace:*",
    "ws": "^8.18.3"
  }
}
