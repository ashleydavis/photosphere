{
  "name": "dev-server",
  "version": "1.0.0",
  "description": "Development server with WebSocket support",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "bun run src/index.ts",
    "start:dev": "bun run --hot src/index.ts",
    "c": "bun run compile",
    "cw": "bun run compile:watch",
    "compile": "tsc",
    "compile:watch": "tsc --watch --preserveWatchOutput",
    "clean": "rm -rf dist tsconfig.tsbuildinfo"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.6.3"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}

