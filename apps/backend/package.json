{
    "name": "photosphere-backend",
    "version": "1.0.0",
    "description": "",
    "main": "src/index.ts",
    "type": "module",
    "scripts": {
        "s": "bun start",
        "sd": "bun run start:dev",
        "start": "bun src/index.ts",
        "start:demo": "bun run clean-uploads && bun --hot src/index.ts",
        "start:prod": "bun run clean-uploads && bun --hot src/index.ts",
        "start:dev": "bun run start:dev-multi-set",
        "start:dev-multi-set": "bun run clean-uploads && bun run copy-multi-set && bun run load-bson-fixture && bun run start-watch",
        "start:dev-50-assets": "bun run clean-uploads && bun run copy-50-assets && bun run load-bson-fixture && bun run start-watch",
        "start:dev-no-assets": "bun run clean-uploads && bun run load-bson-fixture && bun run start-watch",
        "start:dev-1-asset": "bun run clean-uploads  && bun run copy-1-asset && bun run load-bson-fixture && bun run start-watch",
        "start-watch": "cross-env AUTH_TYPE=no-auth APP_MODE=readwrite PORT=3000 ASSET_STORAGE_CONNECTION=fs:./files/collections DB_STORAGE_CONNECTION=fs:./files/database bun --hot src/index.ts",
        "start:single": "cross-env PORT=3000 bun --hot src/index.ts --path",
        "start-for-e2e-tests": "bun run clean-uploads && bun run start:dev-no-assets",
        "build": "bun install --production=false && bun run compile",
        "c": "bun run compile",
        "cw": "bun run compile:watch",
        "compile": "tsc",
        "compile:watch": "tsc --watch --preserveWatchOutput",
        "clean-uploads": "rm -rf files",
        "copy-multi-set": "bunx cp -r ../../test/fixtures/multi-set/files files",
        "copy-50-assets": "bunx cp -r ../../test/fixtures/50-assets/files files",
        "copy-1-asset": "bunx cp -r ../../test/fixtures/1-asset/files files",
        "load-bson-fixture": "bun src/test/load-bson-fixture.ts",
        "clean": "rm -rf build dist coverage tsconfig.tsbuildinfo",
        "t": "bun run test",
        "tw": "bun run test:watch",
        "test": "cross-env NODE_ENV=development jest --passWithNoTests",
        "test:coverage": "cross-env NODE_ENV=development jest --coverage --passWithNoTests",
        "test:watch": "cross-env NODE_ENV=development jest --watch --passWithNoTests"
    },
    "keywords": [],
    "author": "ashley@codecapers.com.au",
    "license": "MIT",
    "devDependencies": {
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.16",
        "@types/jest": "^29.4.0",
        "@types/node": "^22.9.1",
        "axios": "^0.27.2",
        "concurrently": "^8.2.2",
        "cross-env": "^7.0.3",
        "fs-extra": "^11.3.2",
        "jest": "^29.4.1",
        "nodemon": "^2.0.16",
        "supertest": "^6.3.3",
        "ts-jest": "^29.0.5",
        "typescript": "^5.6.3"
    },
    "dependencies": {
        "cors": "^2.8.5",
        "dayjs": "^1.11.7",
        "defs": "workspace:*",
        "express": "^5.0.0-beta.1",
        "express-oauth2-jwt-bearer": "^1.6.0",
        "storage": "workspace:*",
        "rest-api": "workspace:*",
        "bdb": "workspace:*",
        "node-utils": "workspace:*",
        "utils": "workspace:*"
    }
}
