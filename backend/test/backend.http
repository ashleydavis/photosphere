@base_url = http://localhost:3000

###
# @name upload_asset
#
# Uploads the metadata for the asset.
#

POST {{base_url}}/metadata
Content-Type: application/json

{ 
    "acc": "test-account",
    "contentType": "image/jpeg", 
    "fileName": "./test-assets/1.jpeg", 
    "width": 4160, 
    "height": 6240, 
    "hash": "1234", 
    "fileDate": "2023-02-08T01:27:01.419Z", 
    "photoDate": "2023-02-08T01:27:01.419Z", 
    "location": "Somewhere1", 
    "properties": { 
        "a": "property" 
    }, 
    "labels": [ 
        "Cool photo" 
    ] 
}

###
# 
# Uploads the full content for the asset.
#

@upload_asset_id = {{upload_asset.response.body.assetId}}

POST {{base_url}}/asset
Content-Type: image/jpeg
id: {{upload_asset_id}}
acc: test-account

< ./test-assets/1.jpeg


###
# Retrieve an asset.
#

GET {{base_url}}/asset?id={{upload_asset_id}}&acc=test-account

###
#
# Uploads a thumbnail for the asset.
#

POST {{base_url}}/thumb
Content-Type: image/jpeg
id: {{upload_asset_id}}
acc: test-account

< ./test-assets/2.jpeg

###
# Retrieve an thumbnail.
#

GET {{base_url}}/thumb?id={{upload_asset_id}}&acc=test-account

###
#
# Uploads the display version of an asset.
#

POST {{base_url}}/display
Content-Type: image/jpeg
id: {{upload_asset_id}}
acc: test-account

< ./test-assets/3.jpeg

###
# Retrieve the display asset.
#

GET {{base_url}}/display?id={{upload_asset_id}}&acc=test-account

### 
# Add a label to an asset.
#

POST {{base_url}}/asset/add-label
Content-Type: application/json

{
    "id": "{{upload_asset_id}}",
    "acc": "test-account",
    "label": "A great label"
}

### 
# Remove a label from an asset.
#

POST {{base_url}}/asset/remove-label
Content-Type: application/json

{
    "id": "{{upload_asset_id}}",
    "acc": "test-account",
    "label": "A great label"
}

### 
# Sets a description for an asset.
#

POST {{base_url}}/asset/description
Content-Type: application/json

{
    "id": "{{upload_asset_id}}",
    "description": "A great description"
}


###
# Check if an asset with a particular hash has been uploaded.

@hash = 1234

GET {{base_url}}/check-asset?hash={{hash}}&acc=test-account

###
# Retrieve a page of assets.
#

GET {{base_url}}/assets?acc=test-account

