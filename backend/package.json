{
    "name": "photosphere-backend",
    "version": "1.0.0",
    "description": "",
    "main": "build/index.js",
    "scripts": {
        "s": "pnpm start",
        "sd": "pnpm run start:dev",
        "start": "node build/index.js",
        "start:prod": "pnpm run clean-uploads && pnpm run copy-no-assets && cross-env NODE_ENV=production PORT=3000 ts-node-dev --respawn src/index.ts",
        "start:dev": "pnpm run start:dev-multi-collection",
        "start:dev-multi-collection": "pnpm run clean-uploads && pnpm run copy-multi-collection && concurrently --names \"db,be\" \"npm run start-db-multi-collection\" \"npm run start-watch\"",
        "start:dev-50-assets": "pnpm run clean-uploads && pnpm run copy-50-assets && concurrently --names \"db,be\" \"npm run start-db-50-assets\" \"npm run start-watch\"",
        "start:dev-no-assets": "pnpm run clean-uploads  && concurrently --names \"db,be\" \"npm run start-db-no-assets\" \"npm run start-watch\"",
        "start:dev-1-asset": "pnpm run clean-uploads  && pnpm run copy-1-asset && concurrently --names \"db,be\" \"npm run start-db-1-asset\" \"npm run start-watch\"",
        "start-watch": "cross-env DB_CONNECTION_STRING=mongodb://localhost:7001 DB_NAME=photosphere NODE_ENV=development AUTH_TYPE=no-auth PORT=3000 ts-node-dev --respawn src/index.ts",
        "start-for-e2e-tests": "pnpm run clean-uploads && pnpm run start:dev-no-assets",
        "start-db-multi-collection": "insta-mongo --db-port=7001 --rest-port=7000 --load=multi-collection --fixtures=../fixtures --db=photosphere",
        "start-db-50-assets": "insta-mongo --db-port=7001 --rest-port=7000 --load=50-assets --fixtures=../fixtures --db=photosphere",
        "start-db-no-assets": "insta-mongo --db-port=7001 --rest-port=7000 --load=no-assets --fixtures=../fixtures --db=photosphere",
        "start-db-1-asset": "insta-mongo --db-port=7001 --rest-port=7000 --load=1-asset --fixtures=../fixtures --db=photosphere",
        "build": "pnpm install --production=false && pnpm run compile",
        "c": "pnpm run compile",
        "cw": "pnpm run compile:watch",
        "compile": "tsc",
        "compile:watch": "tsc --watch --preserveWatchOutput",
        "clean-uploads": "rm -rf files",
        "copy-multi-collection": "cp -r ../fixtures/multi-collection/files files",
        "copy-50-assets": "cp -r ../fixtures/50-assets/files files",
        "copy-1-asset": "cp -r ../fixtures/1-asset/files files",
        "clean": "rm -rf build",
        "t": "pnpm run test",
        "tw": "pnpm run test:watch",
        "test": "cross-env NODE_ENV=development jest --coverage",
        "test:watch": "cross-env NODE_ENV=development jest --watch"
    },
    "keywords": [],
    "author": "ashley@codecapers.com.au",
    "license": "MIT",
    "devDependencies": {
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.16",
        "@types/fs-extra": "^11.0.1",
        "@types/jest": "^29.4.0",
        "@types/node": "^22.9.1",
        "axios": "^0.27.2",
        "concurrently": "^8.2.2",
        "cross-env": "^7.0.3",
        "fs-extra": "^11.2.0",
        "insta-mongo": "^0.0.7",
        "jest": "^29.4.1",
        "nodemon": "^2.0.16",
        "supertest": "^6.3.3",
        "ts-jest": "^29.0.5",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.6.3"
    },
    "dependencies": {
        "cors": "^2.8.5",
        "dayjs": "^1.11.7",
        "defs": "workspace:*",
        "express": "^5.0.0-beta.1",
        "express-oauth2-jwt-bearer": "^1.6.0",
        "mongodb": "^4.7.0",
        "storage": "workspace:*"
    }
}
