{
    "name": "photosphere-backend",
    "version": "1.0.0",
    "description": "",
    "main": "build/index.js",
    "scripts": {
        "start": "node build/index.js",
        "start:prod": "pnpm run clean-uploads && pnpm run copy-no-assets && cross-env NODE_ENV=production PORT=3000 ts-node-dev --respawn src/index.ts",
        "start:dev": "pnpm run clean-uploads && pnpm run copy-50-assets && cross-env NODE_ENV=development pnpm run start-watch",
        "start:dev-no-assets": "pnpm run clean-uploads  && pnpm run copy-no-assets &&  cross-env NODE_ENV=development pnpm run start-watch",
        "start-watch": "cross-env NODE_ENV=development PORT=3000 ts-node-dev --respawn src/index.ts",
        "start-for-e2e-tests": "pnpm run clean-uploads && pnpm run start:dev-no-assets",
        "build": "pnpm install --production=false && pnpm run compile",
        "compile": "tsc",
        "compile:watch": "tsc --watch --preserveWatchOutput",
        "clean-uploads": "rm -rf files",
        "copy-50-assets": "cp -r ../fixtures/50-assets/files files",
        "copy-no-assets": "cp -r ../fixtures/no-assets/files files",
        "clean": "rm -rf build",
        "test": "cross-env NODE_ENV=development jest --coverage",
        "test:watch": "cross-env NODE_ENV=development jest --watch"
    },
    "keywords": [],
    "author": "ashley@codecapers.com.au",
    "license": "MIT",
    "devDependencies": {
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.16",
        "@types/fs-extra": "^11.0.1",
        "@types/jest": "^29.4.0",
        "@types/node": "^18.19.15",
        "@types/uuid": "^9.0.8",
        "axios": "^0.27.2",
        "concurrently": "^7.2.2",
        "cross-env": "^7.0.3",        
        "jest": "^29.4.1",
        "nodemon": "^2.0.16",
        "supertest": "^6.3.3",
        "ts-jest": "^29.0.5",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.3.3"
    },
    "dependencies": {
        "aws-sdk": "^2.1313.0",
        "cors": "^2.8.5",
        "dayjs": "^1.11.7",
        "express": "^5.0.0-beta.1",
        "express-oauth2-jwt-bearer": "^1.6.0",
        "uuid": "^9.0.1",
        "fs-extra": "^11.1.0"
    }
}
